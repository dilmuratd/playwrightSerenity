{
  "name": "playwright-fullstack-framework",
  "version": "2.0.0",
  "description": "Complete Full-Stack Playwright Automation Framework with API & UI Testing + Serenity BDD",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run clean",
    "test": "cucumber-js --config cucumber.js",
    "test:api": "cucumber-js --config cucumber.js --tags @api",
    "test:ui": "cucumber-js --config cucumber.js --tags @ui",
    "test:smoke": "cucumber-js --config cucumber.js --tags @smoke",
    "test:regression": "cucumber-js --config cucumber.js --tags @regression",
    "test:staging": "ENV=staging cucumber-js --config cucumber.js",
    "test:production": "ENV=production cucumber-js --config cucumber.js",
    "test:parallel": "cucumber-js --config cucumber.js --parallel 3",
    "test:api:staging": "ENV=staging cucumber-js --config cucumber.js --tags @api",
    "test:ui:staging": "ENV=staging cucumber-js --config cucumber.js --tags @ui",
    "report": "node scripts/generate-report.js",
    "serenity:update": "serenity-bdd update",
    "serenity:report": "serenity-bdd run",
    "posttest": "npm run report && npm run serenity:report",
    "clean": "rimraf reports/* test-results/* target/* allure-results/*",
    "format": "prettier --write \"src/**/*.ts\" \"features/**/*.feature\"",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "typescript",
    "automation",
    "api-testing",
    "ui-testing",
    "serenity-bdd"
  ],
  "author": "dilmuratd",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.42.1",
    "@types/chai": "^4.3.11",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "ajv": "^8.12.0",
    "axios": "^1.6.7",
    "chai": "^5.1.0",
    "cucumber-html-reporter": "^7.1.1",
    "eslint": "^8.56.0",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "serenity-bdd": "^1.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "dependencies": {
    "@cucumber/messages": "^24.0.0",
    "@serenity-js/assertions": "^3.21.0",
    "@serenity-js/console-reporter": "^3.21.0",
    "@serenity-js/core": "^3.21.0",
    "@serenity-js/cucumber": "^3.21.0",
    "@serenity-js/playwright": "^3.21.0",
    "@serenity-js/rest": "^3.21.0",
    "@serenity-js/serenity-bdd": "^3.21.0",
    "dotenv": "^16.4.5",
    "faker": "^6.6.6",
    "tsconfig-paths": "^4.2.0"
  }
}