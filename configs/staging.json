{
  "ui": {
    "baseURL": "https://staging.example.com",
    "timeout": 30000,
    "headless": true,
    "slowMo": 0,
    "browser": "chromium",
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "screenshot": "only-on-failure",
    "video": "retain-on-failure",
    "trace": "on"
  },
  "api": {
    "baseURL": "https://api-staging.example.com",
    "timeout": 30000,
    "headers": {
      "Content-Type": "application/json",
      "Accept": "application/json"
    },
    "retryAttempts": 3,
    "retryDelay": 1000
  }
}